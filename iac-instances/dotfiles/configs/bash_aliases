#!/bin/bash

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias cd..="cd .."

# File operations with safety
alias cp="cp -iv"
alias mkdir="mkdir -pv"
alias mv="mv -iv"
alias rm="rm -i"

# Common shortcuts
alias c="clear"
alias h="history"
alias ll="ls -la"
alias ls="ls --color=auto"
alias la="ls -A"
alias l="ls -CF"
alias q="exit"

# Git shortcuts
alias g="git"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gl="git log --oneline --graph --decorate"

# System information
alias ip="hostname -I | awk '{print \$1}'"
alias ports="sudo netstat -tulnp | grep LISTEN"
alias meminfo="free -h"
alias cpuinfo="lscpu"
alias diskinfo="df -h"

# Package management
alias apti="sudo apt-get install"
alias aptr="sudo apt-get remove"
alias apts="apt-cache search"
alias aptu="sudo apt-get update && sudo apt-get upgrade"

# Docker shortcuts (if Docker is installed)
alias d="docker"
alias dc="docker-compose"
alias dps="docker ps"
alias dpsa="docker ps -a"
alias di="docker images"
alias dex="docker exec -it"

# NPM shortcuts (if Node is installed)
alias n="npm"
alias ni="npm install"
alias nr="npm run"
alias ns="npm start"
alias nt="npm test"

# System monitoring
alias top="htop"
alias usage="du -h --max-depth=1 | sort -rh"

# Process management
alias psg="ps aux | grep -v grep | grep"

# Network
alias ping="ping -c 5"
alias wget="wget -c"

# Safety nets
alias chown="chown --preserve-root"
alias chmod="chmod --preserve-root"
alias chgrp="chgrp --preserve-root"

# Reload bash configuration
alias reload="source ~/.bashrc"

# Show path in readable format
alias path='printf "%b\n" "${PATH//:/\\n}"'