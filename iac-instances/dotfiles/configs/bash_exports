#!/bin/bash

# Make vim the default editor
export EDITOR="vim"
export VISUAL="vim"

# History configuration
export HISTCONTROL=ignoreboth  # Ignore duplicates and commands starting with space
export HISTFILESIZE=10000      # Maximum lines in history file
export HISTSIZE=10000           # Maximum commands in history
export HISTIGNORE="&:[bf]g:c:clear:history:exit:q:pwd:* --help"  # Don't record these

# Language and locale
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Less configuration
export LESS_TERMCAP_md="$(tput bold 2> /dev/null; tput setaf 2 2> /dev/null)"
export LESS_TERMCAP_me="$(tput sgr0 2> /dev/null)"
export MANPAGER="less -X"

# Node.js REPL history
export NODE_REPL_HISTORY_SIZE=10000

# Python
export PYTHONIOENCODING="UTF-8"

# Add local bin to PATH
export PATH="$HOME/.local/bin:$PATH"

# Append to history immediately
if ! printf "%s" "$PROMPT_COMMAND" | grep "history -a" &> /dev/null; then
    export PROMPT_COMMAND="history -a; $PROMPT_COMMAND"
fi

# Colored GCC warnings and errors
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

# Set timezone (adjust as needed)
export TZ='UTC'

# Development environment variables
export DEVELOPMENT=true

# Terminal
export TERM=xterm-256color